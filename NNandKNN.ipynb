def hourToPeriod(hour):
    if int(hour) >= 0 and int(hour) < 6:
        return "overnight"
    elif int(hour) >= 6 and int(hour) < 12:
        return "morning"
    elif int(hour) >= 12 and int(hour) < 18:
        return "afternoon"
    elif int(hour) >= 18 and int(hour) <= 23:
        return "evening"
    else:
        return "error"
    
def dayToDayType(day):
    if int(day) < 6:
        return "weekday"
    else:
        return "weekend"

